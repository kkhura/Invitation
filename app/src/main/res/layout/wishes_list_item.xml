<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/temp_margin_top"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>
    <RelativeLayout
            android:layout_below="@+id/temp_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white_dim"/>


        <TextView
                android:layout_toRightOf="@+id/profile_image"
                android:id="@+id/txt_message"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/delius_swash_caps"
                android:text="Wish you all the best for your future and  adf sdLo ream ipsum asodf asfd asdf alsdfj asdfj alsjf sajflkajsd fl"
                android:layout_height="wrap_content"/>


        <TextView
                android:layout_toRightOf="@+id/profile_image"
                android:layout_below="@+id/txt_message"
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/white_dim"
                android:gravity="end"
                android:fontFamily="@font/macondo_swash_caps"
                android:text="-- Laxman Singh"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>